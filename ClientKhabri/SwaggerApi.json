  "components": {
    "schemas": {
      "LoginRequestDto": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "NewsSourceCreateRequestDto": {
        "required": [
          "baseURL",
          "mappingField",
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "baseURL": {
            "maxLength": 500,
            "minLength": 1,
            "type": "string",
            "format": "uri"
          },
          "mappingField": {
            "$ref": "#/components/schemas/NewsSourceMappingFieldRequestDto"
          },
          "token": {
            "$ref": "#/components/schemas/NewsSourceTokenDto"
          }
        },
        "additionalProperties": false
      },
      "NewsSourceMappingFieldRequestDto": {
        "required": [
          "newsListKeyString",
          "publishedAt",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "newsListKeyString": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "maxLength": 1000,
            "type": "string",
            "nullable": true
          },
          "url": {
            "maxLength": 500,
            "type": "string",
            "nullable": true
          },
          "imageUrl": {
            "maxLength": 500,
            "type": "string",
            "nullable": true
          },
          "content": {
            "maxLength": 5000,
            "type": "string",
            "nullable": true
          },
          "source": {
            "maxLength": 200,
            "type": "string",
            "nullable": true
          },
          "author": {
            "maxLength": 200,
            "type": "string",
            "nullable": true
          },
          "publishedAt": {
            "minLength": 1,
            "type": "string"
          },
          "keywords": {
            "type": "string",
            "nullable": true
          },
          "category": {
            "type": "string",
            "nullable": true
          },
          "language": {
            "maxLength": 10,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "NewsSourceTokenDto": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "nullable": true
          },
          "tokenKeyString": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserSignupDto": {
        "required": [
          "email",
          "firstName",
          "lastName",
          "password"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "lastName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 6,
            "type": "string",
            "format": "password"
          }
        },
        "additionalProperties": false
      }
    }
